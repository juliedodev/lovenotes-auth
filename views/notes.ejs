<!doctype html>
<html>
<head>
    <title>Love Notes</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3" id ="divNotesMain">

    <div class="col-sm-6" id ="divNotes">
      <section class ="secNotesMain">
        <section class = "secNotes">
          <h3>Notes</h3>
          <ul class="messages ulMessages">
          <% for(var i=0; i<messages.length; i++) {%>
            
            <li class="message liItems" data-noteId ='<%= messages[i]._id %>'>

             
              <span>Date: <%= new Date(messages[i].date).toISOString().split('T')[0] %></span>
              <span>Title:  <%= messages[i].title%></span>
              <span>To:  <%= messages[i].toWhom %></span>
              <span>From:  <%= messages[i].fromWhom %></span>
              <span>Note:  <%= messages[i].msg %></span>
            
              <section class = "secIcons">

                <span><i class="fa fa-edit"></i></span>
                
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              
                </section>

            </li>
          <% } %>
          </ul>
        </section>

        <section class ="secCreateNote">

              <h2>Create your note</h2>

            <% if (user.local.email) { %>

              <form action="/messages" method="POST" class ="formNote">

                <label for="todayDate">Date:</label>
                <input type="date" id="todayDate" name="date">

                <label for="noteTitle">Subject:</label>
                <input type="text" id="noteTitle" name="noteTitle">

                <label for="toWhom">To:</label>
                <input type="text" id="toWhom" name="toWhom">

                <label for="fromWhom">From:</label>
                <input type="text" id="fromWhom" name="fromWhom">

                <label for="note">Message:</label>
                <input type="text" placeholder="note" name="msg" class="writtenNote">

                <input type="text" value="<%= user.local.email %>" name="email" class="userEmail">

                <button type="submit">Submit</button>

              </form>
            </section>
          </section>
        </div>
        <% } %>

</div>
</div>
<script type="text/javascript" src="main.js"></script>
</body>
</html>
